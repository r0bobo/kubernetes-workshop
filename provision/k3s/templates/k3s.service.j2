[Unit]
Description=Lightweight Kubernetes
Documentation=https://k3s.io
After=network-online.target

[Service]
ExecStartPre=-/sbin/modprobe br_netfilter
ExecStartPre=-/sbin/modprobe overlay
{% if k3s_controller %}
ExecStart=/usr/local/bin/k3s server --no-deploy=servicelb
{% else %}
ExecStart=/usr/local/bin/k3s agent --server={{ k3s_server_addr }} --token-file=/etc/k3s/cluster-token {{ k3s_kubelet_flags }}
{% endif %}
KillMode=process
Delegate=yes
LimitNOFILE=infinity
LimitNPROC=infinity
LimitCORE=infinity
TasksMax=infinity
TimeoutStartSec=0
Restart=always

[Install]
WantedBy=multi-user.target
